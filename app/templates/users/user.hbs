{{page-title 'User'}}
  <div class="container has-text-centered">
    <div class="column is-3 is-offset-4">

      <LinkTo @route="users">
        <button class="button mb-2" type="button">
          Back to users
        </button>
      </LinkTo>

      <div class="user-profile">

        <figure class="avatar">
          <img src={{@model.image}} width="256px" alt="User" />
        </figure>

        <p class="title has-text-white my-2">
          {{@model.name}}
        </p>

        <p class="subtitle has-text-white my-2">
          User Archived:
          {{@model.value}}
        </p>
        
        <LinkTo @route="archived-users">
        <button class="button mb-2" type="button">
          Archived users
        </button>
      </LinkTo>

      <button
          type="button"
          class="button button--archive is-pulled-right mb-4"
          
          {{on "click" this.ChangeArchived}}
        >
          Archive
        </button>

      </div>
    </div>
  </div>
{{outlet}}
